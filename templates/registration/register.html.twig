{% extends 'base.html.twig' %}

{% block title %}Création de compte{% endblock %}


{% block body %}
<div class="container">
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<h1>Créer un compte</h1>

    {{form_start(registrationForm)}} {# voir avec bootstrap #}
	{{form_label(registrationForm.lastname, 'Nom de famille', {'label_attr':{'class':'form-floating'}}) }} 
	{{form_widget(registrationForm.lastname, {'attr':{'class': 'form-control'}}) }}

	{{form_label(registrationForm.firstname, 'Prénom', {'label_attr':{'class':'form-floating'}}) }} 
	{{form_widget(registrationForm.firstname, {'attr':{'class': 'form-control'}}) }}

	{{form_label(registrationForm.gender, 'Gender', {'label_attr':{'class':'form-floating'}}) }} 
	{{form_widget(registrationForm.gender, {'attr':{'class': 'radio-inline'}}) }}

	{{form_label(registrationForm.email, 'E-mail', {'label_attr':{'class':'form-floating'}}) }} 
	{{form_widget(registrationForm.email, {'attr':{'class': 'form-control'}}) }}

	{# {{form_label(registrationForm.password, 'Mot de passe', {'label_attr':{'class':'form-floating'}}) }} 
	{{form_widget(registrationForm.password, {'attr':{'class': 'form-control'}}) }} #}

	{{form_label(registrationForm.phone, 'Téléphone', {'label_attr':{'class':'form-floating'}}) }} 
	{{form_widget(registrationForm.phone, {'attr':{'class': 'form-control'}}) }}

	{{form_label(registrationForm.adress, 'Adresse', {'label_attr':{'class':'form-floating'}}) }} 
	{{form_widget(registrationForm.adress, {'attr':{'class': 'form-control'}}) }}

	{{form_label(registrationForm.zip, 'Zip', {'label_attr':{'class':'form-floating'}}) }} 
	{{form_widget(registrationForm.zip, {'attr':{'class': 'form-control'}}) }}

	{{form_label(registrationForm.city, 'Ville', {'label_attr':{'class':'form-floating'}}) }} 
	{{form_widget(registrationForm.city, {'attr':{'class': 'form-control'}}) }}

	{{form_label(registrationForm.country, 'Pays', {'label_attr':{'class':'form-floating'}}) }} 
	{{form_widget(registrationForm.country, {'attr':{'class': 'form-control'}}) }}

    {{form_end(registrationForm)}}

</div>

{% endblock %}
